doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body
    header
      if gameCode
        h3 Game Code: #{gameCode}
      //- img.logo(src='/buzzer-logo.svg')

    div.container
      div.users-section.mb-3
        h2 Joined Users
        ul.js-active-users
          //- Users will be populated by JavaScript
      
      div.buzzer-container
        ol.js-buzzes
          //- Buzzes will be populated by JavaScript
          each buzz in buzzes
            li(data-team=buzz.team)
              span.buzz-name #{buzz.name} on Team #{buzz.team}
              button.award-point-btn(data-team=buzz.team) Award Point to Team #{buzz.team}
        
        //- Template for new buzz items (hidden, used by JS)
        template#buzz-template
          li(data-team="")
            span.buzz-name
            button.award-point-btn Award Point
      
      //- Template for user items (hidden, used by JS)
      template#user-template
        li.user-item
          span.user-name

      div.js-scores.mb-3
        h3 Scores:
        ul.scores-list
          each score, team in scores || {}
            li Team #{team}: #{score}
        
        //- Template for score items (hidden, used by JS)
        template#score-template
          li

      button.js-clear='Clear buzzes'

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
